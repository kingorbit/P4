        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nazwa" HorizontalAlignment="Left" Margin="26,41,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Background="Transparent" Foreground="#FFFBFBFB" Width="121"/>
        <TextBox x:Name="nazwaetap" HorizontalAlignment="Left" Margin="147,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Grid.ColumnSpan="2"/>
        <Button x:Name="dodajetapBtn" Content="Dodaj Etap" HorizontalAlignment="Left" Margin="123,117,0,0" VerticalAlignment="Top" Width="154" Click="dodajetapBtn_Click" Foreground="#FFF9F5F5" Background="DimGray" Height="90" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.466,0.506" Grid.ColumnSpan="2"/>
